                @Html.LabelFor(m => m.ServiceOffer, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.ServiceOffer, new { @class = "form-control" })
        </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
