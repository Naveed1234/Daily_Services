@model Daily_Services.Models.ApplicationUser
@{

    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<br />
<br /><br />
<style>



    .form-row {
        height: 35px;
    }
</style>
<div class="alert alert-success alert-dismissible fade show mb-2" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
    </button>
    <i class="fa fa-check mx-2"></i>
    <strong style="text-align:center">Success!</strong> Your profile has been updated!
</div>
<div class="main-content-container container px-2">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            @*<span class="text-uppercase page-subtitle">Overview</span>*@
            <h3 class="page-title text-center">User Profile</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row bg-light">
        <div class="col-lg-4 ">
            <div class="card card-small mb-0 pt-0">
                <div class="card-header border-bottom text-center">
                    <div class="mb-0 mx-auto">
                        <img class="rounded-circle" src="~/images/@Model.Image_Path" alt="User Avatar" width="195" />
                        @*<img class="rounded-circle" src="images/avatars/0.jpg" alt="User Avatar" width="110">*@
                    </div>
                    <h4 class="mb-0">@Model.First_Name</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-1">
                        <div class="progress-wrapper">
                            <strong class="text-muted d-block mb-0">Workload</strong>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%;">
                                    <span class="progress-value">90%</span>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item p-2">
                        <strong class="text-muted d-block mb-1">Skill</strong>
                        <span>@Model.Category.Category_Type</span>
                    </li>
                    <li class="list-group-item p-2">
                        <strong class="text-muted d-block mb-1">Phone Number</strong>
                        <span>@Model.Phone_Number</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="container mt-0">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#home">Personal</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#description">Description</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#menu1">Work History</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div id="home" class="container tab-pane active">
                        <div class="card card-small mb-2">
                            <div class="card-header border-bottom">
                                <h6 class="m-0">Account Details</h6>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item p-1">
                                    <div class="row">
                                        <div class="col">
                                            <form>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>First Name</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.First_Name<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Last Name</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.Qualification.Qualification_Type<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Email</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.Email<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Gender</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.Gender.Gender_Type<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Date of Birth</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.DateOfBirth<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>CNIC Number</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.CNIC_No<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Qualification</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.Qualification.Qualification_Type<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Address</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.Address<P>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-4 p-1 ">
                                                        <h6>Postal Code</h6>
                                                    </div>
                                                    <div class="form-group col-md-6 p-1">
                                                        <P>@Model.Postal_Code<P>
                                                    </div>
                                                </div>
                                                <a href="/account/updatecustomer" class="btn btn-primary">Update Account</a>
                                                <button type="submit" class="btn btn-primary">Delete Account</button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div id="menu1" class="container tab-pane fade">
                        <br />
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="feDescription">Description</label>
                                <P>@Model.Description<P>
                            </div>
                        </div>
                    </div>
                    <div id="description" class="container tab-pane fade">
                        <br />
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="feDescription">Description</label>
                                <P>@Model.Description<P>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>
<br />
